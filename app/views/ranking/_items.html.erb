<% rank = 1 ,user_count = 0 %>
<% items.each_with_index do |item,count| %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <%= image_tag(item.large_image , alt: item.title) %>
        </div>
      </div>
      <div class="title">
        <%= item.title %>
      </div>
      <%= render 'items/action' , item: item if logged_in?%>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <% if type == "have" %>
          <% if user_count != item.have_users.count %>
            <% rank = count + 1 %>
          <% end %>
          <% user_count = item.have_users.count %>
        <% else %>
          <% if user_count != item.want_users.count %>
            <% rank = count + 1 %>
          <% end %>
          <% user_count = item.want_users.count %>
        <% end %>
        <h4 class="side-box-title"><%= rank %>位</h4>
        <div class="side-box-body">
          <% if type == "have" %>
            <%= user_count %>人が持っています
          <% else %>
            <%= user_count %>人が欲しいと思っています
          <% end %>  
        </div>
      </div>
      <div class="text-center">
        <%= link_to('楽天詳細ページへ', item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
<% end %>